(defcfg
  input  (device-file "/dev/input/event19") ;; Replace with correct event file
  output (uinput-sink "kmonad-german")
  fallthrough true
  allow-cmd true
)

(defsrc
    a    s    d    f    g    h    j    k    l    ;
)

(deflayer homerow
  (tap-hold 200 a lctrl) (tap-hold 200 s lalt) (tap-hold 200 d lmeta) (tap-hold 200 f lshift)
  g h
  (tap-hold 200 j rshift) (tap-hold 200 k rmeta) (tap-hold 200 l ralt) (tap-hold 200 ; rctrl)
)
